  "license": "MIT",
  "devDependencies": {
    "browserify": "^8.1.3",
    "coffee-script": "^1.9.0",
    "coffeeify": "^1.0.0",
    "espowerify": "^0.10.0",
    "mocha": "^2.1.0",
    "mocha-phantomjs": "^3.5.3",
    "phantomjs": "^1.9.15",
    "power-assert": "^0.10.1",
    "uglify-js": "^2.4.16"
  },
  "dependencies": {
    "browserify-shim": "^3.8.2",
    "jquery": "^2.1.3",
    "throttle-debounce": "^0.1.0"
  }
