{
  "name": "fluidfont",
  "version": "0.1.3",
  "description": "FluidFont",
  "repository": "git@github.com:sugarshin/fluidfont.git",
  "main": "fluidfont.js",
  "scripts": {
    "start": "coffee -cbw fluidfont.coffee",
